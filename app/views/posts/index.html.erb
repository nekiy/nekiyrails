<h1>Listing Posts</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
     <h3><%= link_to 'Новая запись', new_post_path(@post) %></h3>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>

    <td><%= link_to 'Показать запись', post_path(post) %></td>
    <td><%= link_to 'Редактировать', edit_post_path(post) %></td>
    <td><%= link_to 'Удалить запись', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>